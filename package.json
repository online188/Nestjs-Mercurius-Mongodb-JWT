{
  "name": "nestjs-with-graphql",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "cross-env STAGE=dev nest start --watch",
    "start:debug": "cross-env STAGE=dev nest start --debug --watch",
    "start:prod": "cross-env STAGE=prod node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "cross-env STAGE=dev jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "prepare": "husky install"
  },
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "@nestjs/common": "9.0.1",
    "@nestjs/config": "^1.1.6",
    "@nestjs/core": "9.0.1",
    "@nestjs/graphql": "10.1.7",
    "@nestjs/jwt": "^8.0.0",
    "@nestjs/mercurius": "^10.1.7",
    "@nestjs/mongoose": "^9.0.2",
    "@nestjs/passport": "^8.2.1",
    "@nestjs/platform-express": "^8.0.0",
    "@nestjs/platform-fastify": "^9.2.1",
    "@types/hapi__joi": "^17.1.9",
    "apollo-server-express": "2.x.x",
    "bcrypt": "^5.0.1",
    "dataloader": "^2.1.0",
    "graphql": "16.6.0",
    "graphql-relay": "^0.10.0",
    "mercurius": "^11.5.0",
    "mongoose": "^6.2.3",
    "passport": "^0.5.2",
    "passport-jwt": "^4.0.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^8.0.0",
    "@nestjs/schematics": "^8.0.0",
    "@nestjs/testing": "^8.0.0",
    "@types/bcrypt": "^5.0.0",
    "@types/chance": "^1.1.3",
    "@types/express": "^4.17.13",
    "@types/graphql-relay": "^0.7.0",
    "@types/jest": "^26.0.24",
    "@types/mongoose": "^5.11.97",
    "@types/node": "^16.0.0",
    "@types/passport-jwt": "^3.0.6",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^4.28.2",
    "@typescript-eslint/parser": "^4.28.2",
    "chance": "^1.1.8",
    "eslint": "^7.30.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^6.0.0",
    "jest": "27.0.6",
    "mongodb-memory-server": "^8.4.0",
    "prettier": "^2.3.2",
    "pretty-quick": "^3.1.1",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.3",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^3.10.1",
    "typescript": "^4.3.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 50,
        "lines": 70,
        "statements": 70
      }
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s",
      "!main.(t|j)s",
      "!**/*.module.(t|j)s",
      "!**/*.input.(t|j)s",
      "!**/*.output.(t|j)s",
      "!**/*.entity.(t|j)s",
      "!**/*.args.(t|j)s",
      "!**/*.helper.(t|j)s",
      "!**/*.types.(t|j)s",
      "!**/*.entities.(t|j)s",
      "!**/*.helpers.(t|j)s",
      "!**/*.guard.(t|j)s",
      "!**/*.interceptor.(t|j)s",
      "!**/node_modules/**"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
